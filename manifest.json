{
  "manifest_version": 3,
  "name": "Google Maps Hider",
  "version": "1.0.0",
  "description": "Hides all text revealing location on Google Maps street view",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": ["*://*/*"]
    }
  ]
}
